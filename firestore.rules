rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // ğŸ“ USERS â€“ nick przypisany do UID
    match /users/{userId} {
      // tylko wÅ‚aÅ›ciciel dokumentu moÅ¼e czytaÄ‡ i pisaÄ‡
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // ğŸ“ TURNIEJ â€“ statystyki, gracze, mecze itd.
    match /turniej/stats {
      // kaÅ¼dy zalogowany uÅ¼ytkownik moÅ¼e czytaÄ‡ i aktualizowaÄ‡
      allow read, update: if request.auth != null;

      // tylko admin moÅ¼e usuwaÄ‡ dane (np. przycisk â€Zresetuj bazÄ™â€)
      allow delete: if request.auth != null && request.auth.token.admin == true;

      // zakaz tworzenia nowego dokumentu â€statsâ€ z zewnÄ…trz
      allow create: if false;
    }

    // ğŸ” Wszystko inne domyÅ›lnie zabronione
    match /{document=**} {
      allow read, write: if false;
    }
  }
}

